local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Weizzy MM2 Dupe", HidePremium = false, SaveConfig = false, ConfigFolder = "OrionTest"})
local Tab = Window:MakeTab({
	Name = "Dupe",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "Dupe"
})

Tab:AddLabel("Item Name")

Tab:AddTextbox({
	Name = "Knife / Gun Name",
	Default = "",
	TextDisappear = true,
	Callback = function(Value)
		print(Value)
	end	  
})

Tab:AddSlider({
	Name = "Items",
	Min = 1,
	Max = 50,
	Default = 5,
	Color = Color3.new(0.435294, 0.000000, 1.000000),
	Increment = 1,
	ValueName = "Guns / Knifes",
	Callback = function(Value)
		print(Value)
	end    
})

Tab:AddButton({
	Name = "Start",
	Callback = function()
		print("button pressed")
		
		-- Код, который запускается после нажатия кнопки
		-- Получаем объект лейбла по указанному пути
		local label = game:GetService("Players").LocalPlayer.PlayerGui.MainGUI.Game.Inventory.Main.Weapons.Items.Container.Holiday.Container.Christmas.Container.Newitem30.Container.Amount

		-- Инициализируем начальное значение
		local count = 3

		-- Функция для увеличения значения текста
		local function incrementLabel()
		    while count < 50 do
		        -- Увеличиваем значение на 1
		        count = count + 1
		        
		        -- Устанавливаем новый текст
		        label.Text = "x" .. tostring(count)
		        
		        -- Ждем случайное время от 1 до 3 секунд
		        wait(math.random(1, 3))
		    end
		end

		-- Запускаем функцию в отдельном потоке
		spawn(incrementLabel)
  	end    
})
